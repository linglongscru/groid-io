<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="bootstrap/autoload.php"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         colors="true"
         printerClass="PrettyResultPrinter\Printer"
>
    <testsuites>
        <testsuite name="HMTL Test Suite">
            <directory>./tests/</directory>
        </testsuite>
        <testsuite name="API Test Suite">
            <directory suffix=".php">./test/api/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">./app/</directory>
        </whitelist>
    </filter>
    <php>
        <env name="APP_ENV" value="integration"/>
        <env name="CACHE_DRIVER" value="array"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="QUEUE_DRIVER" value="sync"/>
        <env name="DB_CONNECTION" value="sqlite"/>
        <env name="APP_URL" value="http://localhost" />
        <env name="API_DOMAIN" value="localhost" />
        <env name="API_NAME" value="groid.io" />
        <env name="API_PREFIX" value="api" />
        <env name="DB_DATABASE" value="storage/integration/integration.sqlite"/>
        <env name="MAIL_DRIVER" value="log"/>
        <env name="MAIL_HOST" value="mailgun.smtp.org"/>
        <env name="MAIL_PORT" value="2525"/>
    </php>
    <logging>
        <log type="coverage-clover" target="storage/tmp/coverage.xml"/>
    </logging>
</phpunit>
